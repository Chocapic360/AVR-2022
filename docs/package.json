{
  "dependencies": {
    "autoprefixer": "^10.4.7",
    "hugo-extended": "0.98.0",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0"
  },
  "devDependencies": {
    "prettier": "^2.6.2"
  },
  "scripts": {
    "build": "hugo --cleanDestinationDir --enableGitInfo --verbose && python postprocess.py",
    "check-formatting": "prettier --check content/",
    "format": "prettier --write content/",
    "server": "python -c \"import webbrowser; webbrowser.open('http://localhost:1313')\" && hugo server -p 1313"
  }
}
